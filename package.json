{
  "name": "askian-ai",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm -C apps/web dev",
    "build:web": "pnpm -C apps/web build",
    "start:web": "pnpm -C apps/web start",
    "build:widget": "pnpm -C apps/widget build",
    "index:crawl": "pnpm -C packages/indexer tsx cli.ts crawl",
    "index:chunk": "pnpm -C packages/indexer tsx cli.ts chunk",
    "index:embed": "pnpm -C packages/indexer tsx cli.ts embed",
    "purge": "node scripts/purge.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.6",
    "@types/sanitize-html": "^2.16.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "jest": "^30.2.0",
    "node-fetch": "^3.3.2",
    "sanitize-html": "^2.17.0",
    "ts-jest": "^29.4.5"
  }
}